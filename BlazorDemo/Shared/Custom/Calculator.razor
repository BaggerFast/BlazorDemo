@using DataCore.Enums
@inherits ComponentBase

<div class="card-body">
  <EditForm Model="@CalcExpression" OnValidSubmit="@HandleValidSubmit">
    <div class="form-group">
      <label for="first">Number № 1:</label>
      <InputNumber id="first" @bind-Value="CalcExpression.FirstNum" class="form-control"/>
    </div>
    <div class="form-group">
      <label for="sign">Sign:</label>
      <InputSelect id="sign" @bind-Value="CalcExpression.Sign" class="form-control">
        <option value="@SignEnum.Addition">+</option>
        <option value="@SignEnum.Subtraction">-</option>
        <option value="@SignEnum.Multiplication">*</option>
        <option value="@SignEnum.Division">/</option>
      </InputSelect>
    </div>
    <div class="form-group">
      <label for="second">Number № 2:</label>
      <InputNumber id="second" @bind-Value="@CalcExpression.SecondNum" class="form-control"/>
    </div>
    <button type="submit" style="margin-top: 2%; width: 100%" class="btn btn-primary">Save</button>
  </EditForm>
</div>
<div class="card-footer">
  <div class="row">
    <div class="col">Total: <strong>@CalcExpression.Answer</strong></div>
  </div>
</div>